<Example Title="不同状态的数字输入框">
    <Description>除了禁用 disabled 和只读 readonly 状态之外，提供 正常（默认）、成功 success、警告 warning、错误 error 4 种状态的输入框设置。</Description>
    <RunContent>
        <TForm Model="@TestData">
            <TInputRadioGroup @bind-Value="@TestData.Align" ButtonStyle="RadioButtonStyle.Outline">
                <TInputRadio Value="InputTipsAlign.Hide">隐藏文本提示</TInputRadio>
                <TInputRadio Value="InputTipsAlign.AlignInput">文本提示左对齐</TInputRadio>
                <TInputRadio Value="InputTipsAlign.AlignLeft">文本提示对齐输入框</TInputRadio>
            </TInputRadioGroup>
            <p>
                您的选择：@TestData.Align.ToString()
            </p>
            @if (TestData.Align == InputTipsAlign.Hide)
            {
                <TFormItem Label="禁用"><TInputNumber @bind-Value="a" Placeholder="请输入" Disabled></TInputNumber></TFormItem>
                <TFormItem Label="只读"><TInputNumber @bind-Value="a" Placeholder="请输入" Readonly></TInputNumber></TFormItem>
                <TFormItem Label="正常"><TInputNumber @bind-Value="a" Placeholder="请输入" Status="Status.Default"></TInputNumber></TFormItem>
                <TFormItem Label="成功"><TInputNumber @bind-Value="a" Placeholder="请输入" Status="Status.Success"></TInputNumber></TFormItem>
                <TFormItem Label="告警"><TInputNumber @bind-Value="a" Placeholder="请输入" Status="Status.Warning"></TInputNumber></TFormItem>
                <TFormItem Label="错误"><TInputNumber @bind-Value="a" Placeholder="请输入" Status="Status.Error"></TInputNumber></TFormItem>
            }
            else if (TestData.Align == InputTipsAlign.AlignInput)
            {
                <TFormItem Label="正常提示">
                    <TInputNumber @bind-Value="a" Placeholder="请输入" Status="Status.Default" Tip="这是普通文本提示" TipAlignMode="TipAlign.InputAlign"></TInputNumber>
                </TFormItem>
                <TFormItem Label="成功提示">
                    <TInputNumber @bind-Value="a" Placeholder="请输入" Status="Status.Success" Tip="校验通过文本提示" TipAlignMode="TipAlign.InputAlign"></TInputNumber>
                </TFormItem>
                <TFormItem Label="警告提示">
                    <TInputNumber @bind-Value="a" Placeholder="请输入" Status="Status.Warning" Tip="校验不通过文本提示" TipAlignMode="TipAlign.InputAlign"></TInputNumber>
                </TFormItem>
                <TFormItem Label="错误提示">
                    <TInputNumber @bind-Value="a" Placeholder="请输入" Status="Status.Error" Tip="校验存在严重问题文本提示" TipAlignMode="TipAlign.InputAlign"></TInputNumber>
                </TFormItem>
            }
            else if (TestData.Align == InputTipsAlign.AlignLeft)
            {
                <TFormItem Label="正常提示">
                    <TInputNumber @bind-Value="a" Placeholder="请输入" Status="Status.Default" Tip="这是普通文本提示" TipAlignMode="TipAlign.InputNumberAlign"></TInputNumber>
                </TFormItem>
                <TFormItem Label="成功提示">
                    <TInputNumber @bind-Value="a" Placeholder="请输入" Status="Status.Success" Tip="校验通过文本提示" TipAlignMode="TipAlign.InputNumberAlign"></TInputNumber>
                </TFormItem>
                <TFormItem Label="警告提示">
                    <TInputNumber @bind-Value="a" Placeholder="请输入" Status="Status.Warning" Tip="校验不通过文本提示"  TipAlignMode="TipAlign.InputNumberAlign"></TInputNumber>
                </TFormItem>
                <TFormItem Label="错误提示">
                    <TInputNumber @bind-Value="a" Placeholder="请输入" Status="Status.Error" Tip="校验存在严重问题文本提示" TipAlignMode="TipAlign.InputNumberAlign"></TInputNumber>
                </TFormItem>
            }
        </TForm>
    </RunContent>
    <CodeContent>
        @Code.Create(@"
