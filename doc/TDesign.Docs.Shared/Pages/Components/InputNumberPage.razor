                <TFormItem Label=""成功提示"">
                    <TInputNumber @bind-Value=""a"" Placeholder=""请输入"" Status=""Status.Success"" Tips=""校验通过文本提示""></TInputNumber>
                </TFormItem>
                <TFormItem Label=""警告提示"">
